{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "cleanUrls" : true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/event/**",
            "destination": "/event.html"
        },
        {
            "source": "/update",
            "function": "update"
        },
        {
            "source": "/subscribe",
            "function": "subscribe"
        },
        {
            "source": "/twitter",
            "function": "twitter"
        }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
